{
    // ================= 你的保留配置 =================
    "editor.mouseWheelZoom": true,
    "workbench.iconTheme": "material-icon-theme",
    
    // ================= 平台特定路径配置 =================
    // Linux 路径 (你原来的)
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    // Windows 路径 (关键修改)
    // 如果你在 Windows 不装 Nvim，VS Code 会报错。
    // 建议：在 Windows 下载一个 nvim.exe 放个位置，填在这里，哪怕你不怎么用。
    // 或者看下文的“禁用插件法”。
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",

    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },

    // ================= 核心编辑器优化 =================
    "editor.fontSize": 16,
    // [修改] 增加 Consolas 和 'Courier New' 作为 Windows 的回退字体
    "editor.fontFamily": "'Droid Sans Mono', 'Consolas', 'Courier New', monospace",
    "editor.formatOnSave": true,
    "editor.renderWhitespace": "selection",
    "editor.cursorBlinking": "solid",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.guides.bracketPairs": true,
    "files.autoSave": "afterDelay",

    // ================= Vim/Neovim 行为适配 =================
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    
    // 这些按键绑定在没有 Nvim 后端时可能会失效或回退到默认行为
    "vscode-neovim.ctrlKeysForInsertMode": ["a","d","h","j","k","o","r","t","w"],
    "vscode-neovim.ctrlKeysForNormalMode": ["a","b","d","e","f","h","i","j","k","l","m","o","r","t","w","/","]"],

    // ================= C/C++ 开发环境 =================
    "makefile.configureOnOpen": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.makefile-tools",

    // ================= Python / Conda 环境 =================
    "python.terminal.activateEnvironment": true,
    "python.analysis.typeCheckingMode": "basic",

    // ================= 翻译插件 =================
    "commentTranslate.targetLanguage": "zh-CN",
    "commentTranslate.hover.concise": true,
    "terminal.integrated.sendKeybindingsToShell": true,
    
    // ================= 同步忽略 =================
    "settingsSync.ignoredExtensions": []
}